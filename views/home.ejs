    <% if (user) { %>
      <div class="upload-section">
        <div class="p-3 mb-4 bg-light text-dark">
          <h2>Upload File</h2>
          <form action="/upload/<%= user.username %>" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="title">Title</label>
              <input type="text" id="title" name="title" required>
            </div>
            <div class="form-group">
              <label for="description">Description</label>
              <input type="text" id="description" name="description" required>
            </div>
            <div class="form-group">
              <label for="category">Category</label>
              <input type="text" id="category" name="category" required>
            </div>
            <div class="form-group">
              <label for="file">File</label>
              <input type="file" id="file" name="file" required>
            </div>
            <button type="submit" class="btn btn-primary btn-sm">Upload</button>
          </form>
        </div>
      </div>

      <div class="file-display">
        <div class="p-3 mb-4 bg-opacity-10">
          <a href="/download/<%= user.username %>" class="btn btn-outline-primary"><i class="fa fa-download" style="font-size: 20px;color: black;"> Downloads </i></a>

        </div>
      </div>


      <div class="create">
        <div class="p-3 mb-4 text-dark">
          <form action="/create-directory/<%= user.username %>" method="POST">
            <button type="submit" class="btn btn-outline-primary"><i class="fa fa-folder-open" style="font-size:20px;color:black"> Create directory </i></button>
          </form>
        </div>
      </div>

    <% } %>
        
